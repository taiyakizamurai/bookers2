<div class="container">

<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@user, local:true do |f| %>
<div class="row">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

     <%= f.attachment_field :profile_image %>
   </div>
  <div class="row">

  <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
    </div>
  <div class="row">

    <label for="inputIntroduction">introduction</label>
  <%= f.text_field :introduction , autofocus: true, id:"inputIntroduction"%>
   </div>
   
  <div class="row">
  <%= f.submit "Update User" %>
  </div>

<% end %>
</div>